{
  "name": "cssfn-monorepo",
  "private": true,
  "scripts": {
    "compile+test": "lerna run tsc && lerna run test",
    "update-deps": "ncu --root --workspaces --peer",
    "update-deps-u": "ncu --root --workspaces --peer -u",
    "build": "lerna run tsc",
    "publish": "npm run build && lerna publish from-package"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "^18.11.18",
    "jest": "^29.4.1",
    "lerna": "^6.4.1",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "type": "module",
  "workspaces": [
    "packages/*",
    
    "barrels/*",
    
    "tests/*"
  ]
}
