{
  "name": "cssfn-monorepo",
  "private": true,
  "scripts": {
    "compile+test": "lerna run tsc && lerna run test",
    "update-deps": "ncu \"/^(((?!react)[a-z0-9@_/-])+|@cssfn/cssfn-react)$/\" --root --workspaces --peer",
    "update-deps-u": "ncu \"/^(((?!react)[a-z0-9@_/-])+|@cssfn/cssfn-react)$/\" --root --workspaces --peer -u"
  },
  "devDependencies": {
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.17",
    "jest": "^29.3.1",
    "lerna": "^6.1.0",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.4"
  },
  "type": "module",
  "workspaces": [
    "packages/*",
    
    "barrels/*",
    
    "tests/*"
  ]
}
